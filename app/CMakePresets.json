{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20
    },
    "configurePresets": [
        {
            "name": "build",
            "displayName": "Build for HealthyPi Move nRF5340 application MCU",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "BOARD": "healthypi_move/nrf5340/cpuapp"
            }
        },
        {
            "name": "build-nrf52840",
            "displayName": "Build for nRF52840 DK",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-nrf52840",
            "cacheVariables": {
                "BOARD": "nrf52840dk_nrf52840"
            }
        }
    ]
}
